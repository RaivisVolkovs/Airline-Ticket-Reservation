@model IEnumerable<Airline_Ticket_Reservation.Models.ViewModels.ListFlightViewModel>

@{
    ViewData["Title"] = "ListFlights";
}

<h1>ListFlights</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryTo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryTo)
                </td>
                <td>
                    @Html.ActionLink("ListTickets", "ListTickets", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
